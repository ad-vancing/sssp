<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- Generated 2018-10-14 13:29:12 by Hibernate Tools 3.4.0.CR1 -->
<hibernate-mapping package="org.zywx.Herb1">
	<!-- 指定类和表的关系映射，如果不想写全类名，可以在上方指定包名的方式替代 -->
	<class name="Worker" table="Worker" dynamic-insert="true"
		dynamic-update="true">
		<!-- 指定类的OID和表主键的关系映射 -->
		<id name="id" type="int">
			<column name="ID" />
			<!-- 指定对象标识符生成器, 负责为 OID 生成唯一标识符 native指定主键的生成方式——使用数据库本地方式 ，oracle是序列，mysql自增 -->
			<generator class="native" />
		</id>

		<property name="name" type="java.lang.String">
			<column name="NAME" />
		</property>
		
		<!-- 映射组成关系 -->
		<component name="pay">
			<property name="monthPay" column="month_pay"></property>
			<property name="yearPay" column="year_pay"></property>
			<property name="vocationWithPay" column="vocation_pay"></property>
			<!-- 还可以在Pay持久化类的属性中加上Worker,然后在配置文件里用parent标签标记，表示Pay是属于Worker类的 -->
		</component>
		
	</class>
</hibernate-mapping>
